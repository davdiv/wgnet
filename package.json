{
	"name": "wgnet",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"author": "DivDE <divde@musicociel.fr>",
	"description": "Command-line tool and web server to simplify the management of a WireGuard network.",
	"keywords": [
		"wireguard",
		"network",
		"vpn"
	],
	"license": "MIT",
	"exports": null,
	"bugs": {
		"url": "https://github.com/davdiv/wgnet/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/davdiv/wgnet.git"
	},
	"bin": "./wgnet",
	"scripts": {
		"build": "npm run build:node && npm run build:web",
		"build:node": "vite build --config vite.node.config.ts",
		"build:web": "vite build --config vite.web.config.ts",
		"check": "npm run check:node && npm run check:web",
		"check:node": "tsc -p ./tsconfig.node.json",
		"check:web": "svelte-check --tsconfig ./tsconfig.web.json",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"tdd": "vitest",
		"tdd:ui": "vitest --ui",
		"ci": "npm run test:coverage && npm run build && npm run check && npm run lint && npm run format:check",
		"dev:web": "vite --config vite.web.config.ts",
		"format:check": "prettier . --list-different",
		"format:fix": "prettier . --write",
		"lint": "eslint .",
		"preview:web": "vite preview --config vite.web.config.ts"
	},
	"dependencies": {
		"@fastify/compress": "^7.0.3",
		"@fastify/cookie": "^9.3.1",
		"@fastify/jwt": "^8.0.1",
		"@fastify/static": "^7.0.4",
		"better-sqlite3": "^10.0.0",
		"fastify": "^4.27.0",
		"fastify-plugin": "^4.5.1",
		"open": "^10.1.0",
		"qrcode": "^1.5.3",
		"yaml": "^2.4.2",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@agnos-ui/core": "0.3.1",
		"@amadeus-it-group/tansu": "^1.0.0",
		"@eslint/js": "^9.3.0",
		"@fortawesome/free-solid-svg-icons": "^6.5.2",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@tsconfig/svelte": "^5.0.4",
		"@types/better-sqlite3": "^7.6.10",
		"@types/eslint": "^8.56.10",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^20.12.12",
		"@types/qrcode": "^1.5.5",
		"@types/yargs": "^17.0.32",
		"@typescript-eslint/parser": "^7.10.0",
		"@vitest/coverage-v8": "^1.6.0",
		"@vitest/ui": "^1.6.0",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.11.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.39.0",
		"fuse.js": "^7.0.0",
		"globals": "^15.3.0",
		"ipaddr.js": "^2.2.0",
		"path-to-regexp": "^6.2.2",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-sql": "^0.18.0",
		"prettier-plugin-svelte": "^3.2.3",
		"svelte": "^4.2.17",
		"svelte-check": "^3.7.1",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.10.0",
		"vis-data": "^7.1.9",
		"vis-network": "^9.1.9",
		"vite": "^5.2.11",
		"vite-plugin-compression2": "^1.1.1",
		"vitest": "^1.6.0"
	}
}
