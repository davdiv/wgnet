{
	"name": "wgnet",
	"private": true,
	"version": "0.0.4",
	"type": "module",
	"author": "DivDE <divde@musicociel.fr>",
	"description": "Command-line tool and web server to simplify the management of a WireGuard network.",
	"keywords": [
		"wireguard",
		"network",
		"vpn"
	],
	"license": "MIT",
	"exports": null,
	"bugs": {
		"url": "https://github.com/davdiv/wgnet/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/davdiv/wgnet.git"
	},
	"bin": "./wgnet",
	"scripts": {
		"build": "npm run build:node && npm run build:web",
		"build:node": "vite build --config vite.node.config.ts",
		"build:web": "vite build --config vite.web.config.ts",
		"check": "npm run check:node && npm run check:web",
		"check:node": "tsc -p ./tsconfig.node.json",
		"check:web": "svelte-check --tsconfig ./tsconfig.web.json",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"tdd": "vitest",
		"tdd:ui": "vitest --ui",
		"ci": "npm run test:coverage && npm run build && npm run check && npm run lint && npm run format:check",
		"dev:web": "vite --config vite.web.config.ts",
		"format:check": "prettier . --list-different",
		"format:fix": "prettier . --write",
		"lint": "eslint .",
		"preview:web": "vite preview --config vite.web.config.ts"
	},
	"dependencies": {
		"@fastify/compress": "^8.1.0",
		"@fastify/cookie": "^11.0.2",
		"@fastify/helmet": "^13.0.1",
		"@fastify/jwt": "^10.0.0",
		"@fastify/static": "^8.2.0",
		"fastify": "^5.5.0",
		"fastify-jwt-jwks": "^2.0.2",
		"fastify-plugin": "^5.0.1",
		"open": "^10.2.0",
		"qrcode": "^1.5.4",
		"yaml": "^2.8.1",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@agnos-ui/core": "0.9.1",
		"@amadeus-it-group/tansu": "^2.0.0",
		"@eslint/js": "^9.34.0",
		"@fortawesome/free-solid-svg-icons": "^7.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@tailwindcss/vite": "^4.1.12",
		"@tsconfig/svelte": "^5.0.5",
		"@types/eslint": "^9.6.1",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/node": "^24.3.0",
		"@types/qrcode": "^1.5.5",
		"@types/yargs": "^17.0.33",
		"@typescript-eslint/parser": "^8.41.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"daisyui": "^5.1.0",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"fuse.js": "^7.1.0",
		"globals": "^16.3.0",
		"ipaddr.js": "^2.2.0",
		"path-to-regexp": "^8.2.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-sql": "^0.19.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.38.6",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.41.0",
		"vis-data": "^8.0.1",
		"vis-network": "^10.0.1",
		"vite": "^7.1.4",
		"vite-plugin-compression2": "^2.2.1",
		"vitest": "^3.2.4"
	}
}
